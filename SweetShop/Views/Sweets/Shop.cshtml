@model IEnumerable<SweetShop.Mvc.Models.Sweet>
@{
    ViewData["Title"] = "Shop";
    Layout = null;  // standalone
}

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Google Fonts (optional for modern look) -->
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: white;
    }

    .header, .footer {
        background-color: #343a40;
        color: white;
        padding: 15px 0;
        text-align: center;
    }

    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

    .price-badge {
        background-color: #28a745;
        color: white;
        padding: 3px 8px;
        border-radius: 5px;
        font-weight: 500;
        font-size: 0.9rem;
    }
</style>

<!-- Header -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">🍬SweetShop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" asp-action="Shop" asp-controller="Sweets" aria-current="page">Home</a>
                </li>
            </ul>
            <form class="d-flex ms-3" method="get" asp-controller="Sweets" asp-action="Shop">
                <input class="form-control me-2" type="search" name="q" placeholder="Search sweets..." value="@ViewData["SearchQuery"]" />
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<div class="container my-4">
    <!-- Success / Failure Message -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h3 class="mb-4 text-center">Our Sweets</h3>
    <div class="row g-3">
        <!-- Cards Grid -->
        <div class="row">
            @foreach (var s in Model)
            {
                <div class="col-md-3 mb-3">
                    <div class="card h-100 shadow-sm">

                        <!-- Card Click -> Details -->
                        <img src="@s.ImageUrl" class="card-img-top" style="height:220px; object-fit:cover;" alt="@s.Name" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@s.Name</h5>
                            <p class="mb-1 text-muted">@s.Category</p>
                            <p class="text-truncate">@s.Description</p>
                        </div>

                        <!-- Purchase Button -->
                        <div class="card-footer bg-transparent">
                            <form asp-action="Purchase" method="post"
                                  onsubmit="return confirm('Are you sure you want to purchase this sweet?');">
                                <input type="hidden" name="id" value="@s.Id" />
                                <button class="btn btn-success w-100">Purchase</button>
                            </form>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!-- Footer -->
<div class="footer mt-5">
    <p>&copy; @DateTime.Now.Year Sweet Shop. All rights reserved.</p>
</div>

<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
