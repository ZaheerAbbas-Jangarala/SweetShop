@model SweetShop.Mvc.Models.AuthRequest
@{
    ViewData["Title"] = "Sign In / Sign Up";
    Layout = null;  // standalone
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="~/css/auth.css" />
<div style="margin-top: 5%;" class="main">
        <div class="row">
            <span id="msg" class="alert" style="display:none;"></span>
        </div>
    </div>
    <div class="container" id="container">
        <!-- Sign Up -->
        <div class="form-container sign-up-container">
            <form id="registerForm">
                <h1>Create Account</h1>
                <input name="Name" placeholder="Name" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <input name="Email" type="email" placeholder="Email" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input name="Password" type="password" autocomplete="off" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <!-- Sign In -->
        <div class="form-container sign-in-container">
            <form id="loginForm">
                <h1>Sign in</h1>
                <input name="Email" type="email" placeholder="Email" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input name="Password" type="password" placeholder="Password" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <button type="submit">Sign In</button>
            </form>
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/auth.js"></script>
